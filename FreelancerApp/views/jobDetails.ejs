<%- include('./includes/header') %>
    <link href="/css/c.css" rel="stylesheet">
    </head>

    <body>
        <%- include('./includes/navigation') %>
            <div class="container-fluid border"
                style="background-color: #fefbeb;margin-left: 10px;margin-right: 10px; margin-top: 10px; margin-bottom: 10px;">
                <div class="span10 description ">
                    <div style="margin-top: 30px; margin-left: 30px;">
                        <%= details %>
                    </div>
                </div>
            </div>

            <div class="container-fluid border"
                style="background-color: #fefbeb; margin-top: 20px; margin-bottom: 20px;margin-left: 10px; margin-right: 10px;">
                <h2 class="title" align="center">Bid infomation</h2>
                <hr class="hr-line-0">
                <form id="submit_bid_form" action="/bidInfo" method="post">
                    <div class="row-fluid">
                        <div class="span5">
                            <div class="block-amount vlance_jobbundle_bidtype_amount">
                                <div class="block-amount-detail">
                                    <dl class="dl-horizontal">
                                        <dt class="block-amount-label price"
                                            style="margin-top: 10px;margin-bottom: 10px; text-align: left; white-space: normal;width: 125px;">
                                            Your Bid </dt>
                                        <dd class="block-amount-price">
                                            <div class="bidtype_pay">
                                                <div class="  input-append ">
                                                    <input type="text" id="vlance_jobbundle_bidtype_amount" name="bid"
                                                        required="required" pattern="^(0|[1-9][0-9/.]*)$"
                                                        class="span9 popovers-input" placeholder="10.000.000">
                                                    USD
                                                </div>
                                            </div>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                            <br>
                            <div class="form-text block-duration">
                                <label class="title-in-form" for="vlance_jobbundle_bidtype_duration">Deadline</label>
                                <select id="vlance_jobbundle_bidtype_duration" name="deadline" required="required"
                                    pattern="[0-9]*" placeholder="ví dụ: 14">
                                    <option value="1">1 Ngày</option>
                                    <option value="2">2 Ngày</option>
                                    <option value="3" selected="selected">3 Ngày</option>
                                    <option value="5">5 Ngày</option>
                                    <option value="7">7 Ngày</option>
                                    <option value="10">10 Ngày</option>
                                    <option value="14">2 Tuần</option>
                                    <option value="21">3 Tuần</option>
                                    <option value="28">4 Tuần</option>
                                    <option value="42">6 Tuần</option>
                                </select>
                            </div>
                        </div>

                        <div class="span7">
                            <hr class="hr-line-0">
                            <label class="title-in-form">Persuade</label>
                            <div class="row-fluid">
                                <label class="ques-text">1.Your Works Experience Related to this project?
                                    <div class="bidtype_description">
                                        <div class="control-group ">
                                            <textarea id="vlance_jobbundle_bidtype_introDescription" name="exp"
                                                required="required" class="form-textarea"></textarea>
                                        </div>
                                    </div>
                            </div>

                            <div class="row-fluid">
                                <label class="ques-text">2.Your solution?</label>
                                <div class="bidtype_introdescription">
                                    <div class="control-group ">
                                        <textarea id="vlance_jobbundle_bidtype_description" name="solution"
                                            required="required"></textarea>
                                    </div>
                                </div>
                            </div>
                            <hr class="hr-line-0">
                            <label class="title-in-form" style="margin-bottom: 10px;"
                                for="bidform_telephone">Contact</label>
                            <div class="row-fluid" style="padding-bottom: 10px;">
                                <div class="input-prepend telephone span6">
                                    <input id="bidform_telephone" name="contact" placeholder="Phone Number">
                                </div>
                            </div>
                            <input type="text" name="title" value="<%= title %>"
                                style="display: none; pointer-events: none;">
                            <button type="submit" class="btn btn-primary btn-large span12" style="margin-left: 0px;">Bid</a>
                        </div>
                    </div>
                </form>
            </div>
            <%- include('./includes/footer')%>